<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/BigerTextSize"
        android:layout_margin="@dimen/padding"
        />


    <com.sk.weichat.view.ClearEditText
        android:layout_marginTop="@dimen/padding"
        android:id="@+id/content"
        style="@style/EditTextWithLeftIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/BigTextSize"
        android:hint="@string/please_input_room_name"
        android:lines="2"
        android:maxLines="2" />

    <com.datelibrary.view.ClearEditText
        android:visibility="gone"
        android:layout_marginTop="@dimen/padding"
        android:id="@+id/second_et"
        style="@style/EditTextWithLeftIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/BigTextSize"
        android:hint="@string/please_input_room_name"
        android:lines="2"
        android:maxLines="2" />
    <com.datelibrary.view.ClearEditText
        android:visibility="gone"
        android:layout_marginTop="@dimen/padding"
        android:id="@+id/three_et"
        style="@style/EditTextWithLeftIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/BigTextSize"
        android:hint="@string/please_input_room_name"
        android:lines="2"
        android:maxLines="2" />
    <com.datelibrary.view.ClearEditText
        android:visibility="gone"
        android:layout_marginTop="@dimen/padding"
        android:id="@+id/four_et"
        style="@style/EditTextWithLeftIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/BigTextSize"
        android:hint="@string/please_input_room_name"
        android:lines="2"
        android:maxLines="2" />
    <Button
        android:id="@+id/sure_btn"
        style="@style/GreenBtn"
        android:padding="@dimen/padding"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:textColorHint="@color/white"
        android:hint="@string/sure"
        android:textColor="@color/white" />

</LinearLayout>